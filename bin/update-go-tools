#!/bin/bash

tools=( 
    github.com/shoenig/petrify
    github.com/alecthomas/gometalinter
    github.com/golang/dep/cmd/dep
    github.com/clly/vanity
    github.com/clly/percentile
    rsc.io/goversion
    golang.org/x/vgo
    )

for i in "${tools[@]}"; do
    echo "Updating and installing $i"
    go get -u $i && go install $i/...
    echo "$i installed"
done
